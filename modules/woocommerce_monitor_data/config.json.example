{
    "woocommerce": {
        "url": "https://yourdomain.com",
        "consumer_key": "ck_YOUR_CONSUMER_KEY_HERE",
        "consumer_secret": "cs_YOUR_CONSUMER_SECRET_HERE",
        "api_version": "wc/v3",
        "monitor_secret_key": ""
    },
    "monitoring": {
        "poll_interval": 300,
        "check_orders_since_hours": 48,
        "base_directory": "I:/Physical/Orders",
